@using Querys
@{
    Layout = "~/Shared/_Layout.cshtml";
    Page.Title = "Restaurant overzicht";

    RestaurantQuerys rQuery = new RestaurantQuerys();
    var restaurants = rQuery.GetAllRestaurants();
}
<main>
    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background1.jpg"></div>
    </div>
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 center">
                    <h3><i class="mdi-content-send brown-text"></i></h3>
                    <h4>Restauranten Overzicht</h4>
                </div>
            </div>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">search</i>
                            <input id="icon_prefix" type="text" class="validate">
                            <label for="icon_prefix">Zoeken..</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                @foreach (var restaurant in restaurants)
                {
                    <div class="col s3">
                        <div class="card medium">
                            <div class="card-image">
                                <img src="~/Assets/img/restaurant_stock.jpg">
                                <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">@restaurant.RestaurantName<i class="small material-icons right">star</i></span>
                            </div>
                            <div class="card-content">
                                <p>
                                    @restaurant.Description <br />
                                    @restaurant.City @restaurant.PostalCode
                                </p>
                            </div>
                            <div class="card-action">
                                <a class="waves-effect waves-light btn-small" href="#"><i class="material-icons left">shopping_cart</i>Reserveren</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background2.jpg"></div>
    </div>
</main>
