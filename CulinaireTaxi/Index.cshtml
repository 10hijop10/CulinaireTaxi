@using Querys;
@{
    Layout = "~/Shared/_Layout.cshtml";
    Page.Title = "About";

    RestaurantQuerys rQuery = new RestaurantQuerys();
    var restaurants = rQuery.GetAllRestaurants();

    TaxiCompanyQuerys tQuery = new TaxiCompanyQuerys();
    var taxis = tQuery.GetAllCompanies();
}

<main>
    <div id="index-banner" class="parallax-container">
        <div class="parallax"><img src="~/Assets/img/background1.jpg"></div>
    </div>

    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 center">
                    <h3><i class="mdi-content-send brown-text"></i></h3>
                    <h4>Populaire restaurants</h4>
                </div>
            </div>
            <div class="row">
                @foreach (var restaurant in restaurants.Take(6))
                {
                <div class="col m4">
                    <div class="card">
                        <div class="card-image">
                            <img src="~/Assets/img/restaurant_stock.jpg">
                            <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">@restaurant.RestaurantName<i class="small material-icons right">star</i></span>
                        </div>
                        <div class="card-content">
                            <p>@restaurant.Description</p>
                        </div>
                        <div class="card-action">
                            <a href="">Reserveren</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>


    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background2.jpg"></div>
    </div>
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s12 center">
                    <h3><i class="mdi-content-send brown-text"></i></h3>
                    <h4>Populaire Taxi's</h4>
                </div>
            </div>
            <div class="row">
                @foreach (var taxi in taxis.Take(6))
                {
                    <div class="col m4">
                        <div class="card">
                            <div class="card-image">
                                <img src="~/Assets/img/taxi_stock.jpg">
                                <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">@taxi.CompanyName<i class="small material-icons right">star</i></span>
                            </div>
                            <div class="card-content">
                                <p>@taxi.Description</p>
                            </div>
                            <div class="card-action">
                                <a href="~/TaxiReservation?taxi=@taxi.Id">Reserveren</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background3.jpg"></div>
    </div>
</main>
