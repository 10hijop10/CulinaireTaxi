@{
    Layout = "_Layout.cshtml";
    Page.Title = "Manage Account";

    if (!WebSecurity.IsAuthenticated )
    {
        Response.Redirect("~/");
    }

    // Na het opsturen voor goedkeuring mag een bedrijf niet de gegevens bewerken totdat deze zijn goed of afgekeurd.
    // Als een bedrijdf is goedgekeurd niet meer de ADD command uitvoeren maar de UPDATE
    bool RestaurantValidated = true;

    if (IsPost)
    {

        Validation.RequireField("taxi-name", "Vul een naam in");
        Validation.RequireField("taxi-postalcode", "Vul een prijs in");
        Validation.RequireField("taxi-city", "Vul een prioriteit in");

        var TaxiName = Request.Form["taxi-name"];
        var PostalCode = Request.Form["taxi-postalcode"];
        var City = Request.Form["taxi-city"];


        TaxiCompanyQuerys taxiquerys = new TaxiCompanyQuerys();

        taxiquerys.AddTaxiCompany(WebSecurity.CurrentUserId, TaxiName, City);

        Response.Redirect("~/Manage");
    }

}
<div class="row">
    <div class="col s12">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="col s12 center" style="margin-bottom:20px;">
                            @if (RestaurantValidated)
                            {
                                <h5>Bewerk uw bedrijfsgegevens</h5>
                            }
                            else
                            {
                                <h5>Voeg uw bedrijf toe aan de website</h5>
                            }
                        </div>
                        <div class="row">
                            <form class="col s12" method="post">
                                <div class="row">
                                    <div class="input-field col s6">
                                        <input placeholder="Bedrijfsnaam" name="taxi-name" type="text" class="validate">
                                        <label for="first_name">Bedrijfsnaam</label>
                                        @Html.ValidationMessage("taxi-name")
                                    </div>
                                    <div class="input-field col s6">
                                        <input placeholder="Locatie" name="taxi-city" type="text" class="validate">
                                        <label for="last_name">Locatie</label>
                                        @Html.ValidationMessage("taxi-city")
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s3">
                                        <input placeholder="Postcode" name="taxi-postalcode" type="text" class="validate">
                                        <label for="password">Postcode</label>
                                        @Html.ValidationMessage("taxi-postalcode")
                                    </div>
                                </div>
                                <div class="card-action">
                                    <button type="submit" href="" class="btn-flat right" style="color:green">
                                        @if (RestaurantValidated)
                                        {
                                            <span>Gegevens bijwerken</span>
                                        }
                                        else
                                        {
                                            <span>Versturen voor goedkeuring</span>
                                        } 
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
