@{
    Layout = "_Layout.cshtml";
    Page.Title = "Manage Account";
}
<div class="row">
    <div class="col s12">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="col s12 center" style="margin-bottom:20px;">
                            <h5>@Page.Title</h5>
                        </div>
                        <div class="row">
                            <p>Om uw account te verwijderen van dit platform kunt u op de onderstaande knop drukken.<br /></p>
                            <p>
                                <a href="~/Account/DeletePersonalData" class="btn btn-default">Verwijderen</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}