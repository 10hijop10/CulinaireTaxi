@{
    Layout = "~/Shared/_Layout.cshtml";
}

<main>
    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background1.jpg" alt="Unsplashed background img 2"></div>
    </div>

    <div class="container" style="min-height:600px">
        <div class="section">
            <div class="row">
                <div class="col s12">
                    <div class="col m3">
                        <div class="collection">
                            <a href="~/Account" class="collection-item ">Mijn reserveringen</a>
                            @*<a href="~/Account/History" class="collection-item">Reserverings geschiedenis</a>*@
                        </div>
                        <div class="collection">
                            <a href="~/Account/AccountInfo" class="collection-item">Gegevens bijwerken</a>
                            <a href="~/Account/Email" class="collection-item ">Email bijwerken</a>
                            <a id="change-password" href="~/Account/Manage" class="collection-item">Wachtwoord</a>
                            <a href="~/Account/PersonalData" class="collection-item">Account verwijderen</a>
                        </div>
                    </div>
                    <div class="col m9">
                        @RenderBody()
                    </div>                
                </div>
            </div>

        </div>
    </div>


    <div class="parallax-container valign-wrapper">
        <div class="parallax"><img src="~/Assets/img/background2.jpg" alt="Unsplashed background img 3"></div>
    </div>
</main>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
