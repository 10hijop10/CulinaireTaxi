@{
    Layout = "_Layout.cshtml";
    Page.Title = "Manage Account";
}
<div class="row">
    <div class="col s12">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="col s12 center" style="margin-bottom:20px;">
                            <h5>@Page.Title</h5>
                            <p>
                                <strong>Het verwijderen van uw account kan niet ongedaan worden gemaakt.</strong>
                            </p>
                        </div>
                        <div class="row">
                            <form id="delete-user" method="post" class="form-group">
                                
                    
                                
                                <button class="btn btn-danger " type="submit">Verwijder en sluit mijn account</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}