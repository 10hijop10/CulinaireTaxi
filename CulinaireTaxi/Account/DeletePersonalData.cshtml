@{
    Layout = "_Layout.cshtml";
    Page.Title = "Account verwijderen";
}
<div class="row">
    <div class="col s12">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="col s12 center" style="margin-bottom:20px;">
                            <h5>@Page.Title</h5>
                        </div>
                        <div class="row">
                            <div class="col s12 center">
                                <p>Weet u zeker dat u uw account wilt verwijderen?<br /></p>
                                <p>
                                    <strong>Het verwijderen van een account kan niet ongedaan worden gemaakt.</strong>
                                </p>
                            </div>
                            <div class="col s12 center" style="margin-top:20px">
                                <form id="delete-user" method="post" class="form-group">
                                    <button class="btn btn-danger " type="submit">Verwijder en sluit mijn account</button>
                                </form>
                            </div>
                            <p>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}